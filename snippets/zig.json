{
    ".source.zig": {
        "public function": {
            "prefix": "pfun",
            "body": "pub fn ${1:name}() ${2:void}{\n    $0\n}",
            "description": "Snippet for zig public function"
        },
        "if with value ": {
            "prefix": "ifv",
            "body": "if (${1:condition})|${$2:value}|{\n    $0\n}",
            "description": "Snippet for if expression with value"
        },
        "if with no value ": {
            "prefix": "iff",
            "body": "if (${1:condition}){\n    $0\n}",
            "description": "Snippet for if expression without value"
        },
        "for with  value ": {
            "prefix": "forr",
            "body": "for (${1:expr}) |${2:value}|{\n    $0\n}",
            "description": "Snippet for for expression with value"
        },
        "while with  expression ": {
            "prefix": "whc",
            "body": "while (${1:condition}) :(${2:expresson}){\n    $0\n}",
            "description": "Snippet for while expression with value conditional expression"
        },
        "while with no expression ": {
            "prefix": "wh",
            "body": "while (${1:condition}) {\n    $0\n}",
            "description": "Snippet for while expression"
        },
        "private struct ": {
            "prefix": "str",
            "body": "const ${1:Name} = struct.{$0};",
            "description": "Snippet for private struct definition"
        },
        "public struct ": {
            "prefix": "pstr",
            "body": "pub const ${1:Name} = struct.{$0};",
            "description": "Snippet for public struct definition"
        },
        "test block ": {
            "prefix": "tb",
            "body": "test \"${1:Name}\"  {\n    $0\n}",
            "description": "Snippet for test block"
        }
    }
}